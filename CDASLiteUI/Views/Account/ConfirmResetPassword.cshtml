@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ConfirmResetPassword";
    Layout = "~/Views/Shared/_LayoutAccountCDAS.cshtml";
}

<h1>Reset Your Password</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="ConfirmResetPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <input type="hidden" name="UserId" value="@ViewBag.UserId" />
                <input type="hidden" name="Code" value="@ViewBag.Code" />
            </div>
            <div class="form-group">
                <label style="font-weight:bold" asp-for="NewPassword" class="control-label"></label>
                <input class="form-control" asp-for="NewPassword" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label style="font-weight:bold" asp-for="ConfirmNewPassword" class="control-label"></label>
                <input class="form-control" asp-for="ConfirmNewPassword" type="password" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <input type="submit" value="Reset Password" class="btn btn-default btn-block" style="background-color:#46B3AE; color:white" />
        </form>
    </div>

    <div class="col-md-6">
        <img src="~/health-theme-assets/images/gallery-03.jpg" style="max-width: 100%; height: auto; position: fixed " />
    </div>
</div>