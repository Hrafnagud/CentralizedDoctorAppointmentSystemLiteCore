@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCDAS.cshtml";
}

@if (!string.IsNullOrEmpty(TempData["EmailConfirmedMessage"] as String))
{
    <h4 class="text-info">@TempData["EmailConfirmedMessage"]</h4>
}

<div class="row">
    <div class="col-md-6">
        <h1 style="font-weight:bold">Login</h1>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input class="form-control" asp-for="UserName" type="text" maxlength="11" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input class="form-control" asp-for="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="checkbox" asp-for="RememberMe" /> Remember Me
                    <a style="float:right" class="btn btn-link btn-info" asp-action="ResetPassword">Forgot Password</a>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-default btn-block" style="background-color:#46B3AE; color:white" />
                    <a class="btn btn-primary btn-block" asp-action="FacebookLogin">Login via Facebook</a>
                    <a class="btn btn-danger btn-block" asp-action="GoogleLogin">Login via Google</a>
                </div>
        </form>

    </div>

    <div class="col-md-6">
        <img src="~/health-theme-assets/images/gallery-03.jpg" style="max-width: 100%; height: auto; position: fixed " />
    </div>
</div>