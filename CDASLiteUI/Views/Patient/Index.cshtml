
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCDAS.cshtml";
}

@if (!string.IsNullOrEmpty(TempData["SaveAppointmentStatus"] as String))
{
    <div class="alert alert-warning" role="alert">
        @TempData["SaveAppointmentStatus"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <button asp-controller="Patient" asp-action="Appointment" class="btn btn-block btn-default" style="color:white; background-color:#A7161A; height:100px; margin:auto 0; border-radius:20px;">
            <i class="fa fa-h-square" aria-hidden="true" style="transform:scale(3); float:left; margin-left: 30px; margin-top:10px"></i>
            <span style="font-weight: bold">Book an Appointment</span><br />
            <span style="font-size:12px;">Book an Appointment for Related Clinics</span>
        </button>
    </div>

    <div class="col-md-8">

    </div>

</div>