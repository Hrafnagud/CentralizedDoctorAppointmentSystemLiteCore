@model List<AvailableDoctorAppointmentHoursViewModel>
@{
    ViewData["Title"] = "FindAppointmentHours";
    Layout = "~/Views/Shared/_LayoutCDAS.cshtml";
}

<div style="background-color:#ffffff; border-radius: 18px;">
    <div class="container-fluid">
        <div class="row" style=" border-radius: 12px; padding: 30px; min-height: calc(100vh - 300px);">
            <div class="row col-md-12" style="font-size:20px">
                <span><a asp-controller="Patient" asp-action="FindAppointment" asp-route-cid="@TempData["ClinicId"]" asp-route-hid="@TempData["HospitalId"]"><i class="fa fa-arrow-left" style="color:black"></i></a>&emsp;Randevu Al</span>
                @* Randevu al ve geri butonu *@
            </div>
            <div class="row col-md-12" style="font-size:20px">
                <span>&ensp;</span>
                @*Hekim: @Model.Doctor.AppUser.Name  @Model.Doctor.AppUser.Surname*@
                <span><b>Hekim:</b>@ViewBag.Doctor</span>

            </div>

            <div class="m-4">
                <ul class="nav nav-tabs" id="myTab">

                    <li class="nav-item">
                        <a href="#day" class="nav-link active" data-bs-toggle="tab" style="border-bottom: 2px solid blue;">@DateTime.Now.AddDays(1).ToShortDateString() - @DateTime.Now.AddDays(1).ToString("dddd")</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="accordion" id="myAccordion">
                        @{
                            int sayac = 0;
                        }
                        @foreach (var item in Model)
                        {
                            { sayac++; }

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading@(sayac)">
                                    <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#collapse@(sayac)">@item.HourBase</button>
                                </h2>

                                <div id="collapse@(sayac)" class="accordion-collapse collapse" data-bs-parent="#myAccordion">

                                    @foreach (var subitem in item.Hours)
                                    {

                                        <div class="card-body">
                                            <a asp-controller="Patient" asp-action="SaveAppointment" asp-route-hcid="@item.HospitalClinicId" asp-route-date="@DateTime.Now.AddDays(1).ToShortDateString()" asp-route-hour="@subitem" class="btn btn-primary" style="width:100px;">
                                                @subitem
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
